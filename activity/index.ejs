<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="./script.js"></script>
    <link rel="stylesheet" href="style.css">
    <title><%=title%></title>
</head>

<body>
    <!-- .menu+.menu-options+(.formulaBar>(input[type="text"])*2)+.cell-container+.sheets -->
    <!-- #New+#Open+#Save -->
    <div class="menu-container">Menu</div>
    <div class="menu-options">
        <div id="New">New</div>
        <div id="Open">Open</div>
        <div id="Save">Save</div>
    </div>
    <div class="formula-conatiner">
        Formula
        <input type="text" id="address-input">
        <input type="text" id="formula-input">
    </div>
    <div class="content-container">
        <div id="top-left-cell"></div>
        <div id="top-row">
            <%for(let i=0; i<cols;i++){%>
            <div class="cell">
                <%=String.fromCharCode(i+65)%>
            </div>
            <%}%>
        </div>
        <div id="left-col">
            <%for(let j=1; j<=rows; j++){%>
                <div class="cell">
                <%=j%>
            </div>
            <%}%>
        </div>
        <div id="grid">
            <% for(let i=0;i<rows;i++) { %>
            <div class="row">
                <% for(let j=0;j<cols;j++){ %>
                    <div class="cell" contenteditable="true" row-id=<%=i%> col-id=<%=j%>></div>
                <%}%>
                </div>
            <% } %>
            </div>
        </div>

        <div class="sheets-container">
            Sheets
        </div>

        <!-- <script src="script.js"></script> -->

</body>

</html>